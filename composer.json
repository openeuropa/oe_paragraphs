{
    "name": "openeuropa/oe_paragraphs",
    "description": "Drupal module providing a collection of Paragraph types based on ECL components.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "drupal/allowed_formats": "^1.1",
        "drupal/core": "^8.7",
        "drupal/paragraphs": "^1.8"
    },
    "require-dev": {
        "composer/installers": "~1.5",
        "drupal-composer/drupal-scaffold": "~2.5.2",
        "drupal/config_devel": "~1.2",
        "drupal/drupal-extension": "~4.0",
        "drush/drush": "~9.0",
        "guzzlehttp/guzzle": "~6.3",
        "nikic/php-parser": "~3.0",
        "openeuropa/behat-transformation-context" : "~0.1",
        "openeuropa/code-review": "~1.0@beta",
        "openeuropa/drupal-core-require-dev": "^8.7",
        "openeuropa/task-runner": "~1.0-beta5",
        "symfony/dom-crawler": "~3.4"
    },
    "_readme": [
        "We explicitly require guzzlehttp/guzzle to allow tests after 'composer update --prefer-lowest' to complete successfully."
    ],
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_paragraphs\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_paragraphs\\": "./tests/"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "config": {
        "sort-packages": true
    }
}
